<!DOCTYPE html>
<html>
<%- include('partials/front_head'); %>

	<body class="royal_preloader">
		<div id="page" class="site">

			<!-- #site-header -->
			<%- include('partials/front_header'); %>
				<div id="content" class="site-content">
					<div class="page-header" style="background-image: url('/bg-blog.jpg');">
						<div class="container">
							<div class="breadc-box no-line">
								<div class="row">
									<div class="col-md-6">
										<h1 class="page-title">Blog</h1>
									</div>
									<div class="col-md-6 mobile-left text-right">
										<ul id="breadcrumbs" class="breadcrumbs none-style">
											<li><a href="/">Home</a></li>
											<li class="active">Blog</li>
										</ul>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="entry-content">
						<div class="container">
							<div class="row">

								<div id="primary" class="content-area col-lg-8 col-md-8 col-sm-12 col-xs-12">
									<main id="main" class="site-main">
										<% blogs.forEach(blog=> { %>
											<article class="post-box post type-post hentry">
												<div class="entry-media">
													<a href="post">
														<img src="/<%= blog.featuredImage %>" alt="">
													</a>
												</div>
												<div class="inner-post">
													<header class="entry-header">

														<div class="entry-meta">
															<span class="posted-on">
																<time class="entry-date published">
																	<%= blog.createdAt %>
																</time>
															</span>
															<% blog.categories.forEach(category=> { %>
																<span class="posted-in">
																	<a href="#" rel="category tag">
																		<%= category.name %>
																	</a>
																</span>
																<% }); %>
														</div>
														<!-- .entry-meta -->
														<h4 class="entry-title"><a href="/blog/<%= blog.slug %>"
																rel="bookmark">
																<%= blog.title %>
															</a></h4>
													</header>
													<!-- .entry-header -->

													<div class="entry-summary">
														<p>
															<%= blog.content %>
														</p>
													</div>
													<!-- .entry-content -->

													<footer class="entry-footer">
														<a class="post-link" href="/blog/<%= blog.slug %>">Read more</a>
													</footer>
													<!-- .entry-footer -->
												</div>
											</article>
											<% }); %>

												<ul class="page-pagination none-style">
													<li><span aria-current="page" class="page-numbers current">1</span>
													</li>
													<li><a class="page-numbers" href="#">2</a></li>
													<li><a class="next page-numbers" href="#"><i
																class="fa fa-angle-right"></i></a></li>
												</ul>

									</main>
									<!-- #main -->
								</div>

								<aside id="sidebar"
									class="widget-area primary-sidebar col-lg-4 col-md-4 col-sm-12 col-xs-12">
									<% if (categories && categories.length> 0) { %>
										<section id="categories-2" class="widget widget_categories">
											<h4 class="widget-title">Categories</h4>
											<ul>
												<% categories.forEach(cat=> { %>
													<li class="cat-item">
														<a href="/category/<%= cat.slug %>">
															<%= cat.name %>
														</a>
													</li>
													<% }); %>
											</ul>
										</section>
										<% } %>
										
											<% if (latestPosts && latestPosts.length> 0) { %>
												<section id="recent_news-1" class="widget widget_recent_news">
													<h4 class="widget-title">Latest News</h4>
													<ul class="recent-news clearfix">
														<% latestPosts.forEach(post=> { %>
															<li class="clearfix">
																<% if (post.featuredImage) { %>
																	<div class="thumb">
																		<a href="/blog/<%= post.slug %>">
																			<img src="/<%= post.featuredImage %>"
																				alt="<%= post.title %>">
																		</a>
																	</div>
																	<% } %>
																		<div class="entry-header">
																			<h6>
																				<a href="/blog/<%= post.slug %>">
																					<%= post.title %>
																				</a>
																			</h6>
																			<span class="post-on">
																				<span class="entry-date">
																					<%= new
																						Date(post.createdAt).toLocaleDateString('en-US',
																						{ year: 'numeric' ,
																						month: 'long' , day: 'numeric'
																						}) %>
																				</span>
																			</span>
																		</div>
															</li>
															<% }); %>
													</ul>
												</section>
												<% } %>


