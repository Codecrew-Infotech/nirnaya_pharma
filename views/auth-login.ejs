<%- contentFor('extra_css') %>

    <%- contentFor('content') %>

        <div class="container-xxl">
            <div class="row vh-100 d-flex justify-content-center">
                <div class="col-12 align-self-center">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-4 mx-auto">
                                <div class="card">
                                    <div class="card-body p-0 bg-black auth-header-box rounded-top">
                                        <div class="text-center p-3">
                                            <a href="/" class="logo logo-admin">
                                                <img src="/images/logo-sm.png" height="50" alt="logo" class="auth-logo">
                                            </a>
                                            <h4 class="mt-3 mb-1 fw-semibold text-white fs-18">nirnayan healthcare pvt ltd</h4>
                                            <p class="text-muted fw-medium mb-0">Sign in to continue to Admin.</p>
                                        </div>
                                    </div>
                                    <div class="card-body pt-0">
                                        <% if (typeof error !=='undefined' && error) { %>
                                            <div class="alert alert-danger text-center py-2">
                                                <%= error %>
                                            </div>
                                            <% } %>

                                                <form class="my-4 form" method="POST">
                                                    <div class="form-group mb-2">
                                                        <label class="form-label" for="email">Email</label>
                                                        <input type="email" class="form-control" id="email" name="email"
                                                            value="<%= typeof email !== 'undefined' ? email : '' %>"
                                                            placeholder="Enter Email">
                                                    </div>

                                                    <div class="form-group">
                                                        <label class="form-label" for="userpassword">Password</label>
                                                        <input type="password" class="form-control" name="password"
                                                            id="userpassword" placeholder="Enter password">
                                                    </div>

                                                    <div class="d-grid mt-3">
                                                        <button class="btn btn-primary" type="submit">Log In <i
                                                                class="fas fa-sign-in-alt ms-1"></i></button>
                                                    </div>
                                                </form>
                                    </div>

                                </div><!--end card-->
                            </div><!--end col-->
                        </div><!--end row-->
                    </div><!--end card-body-->
                </div><!--end col-->
            </div><!--end row-->
        </div><!-- container -->

        <%- contentFor('extra_javascript') %>